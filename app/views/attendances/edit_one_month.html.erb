
<% provide(:title, @user.name) %>
<div>
  <h1>勤怠編集画面</h1>
  <table class = "table table-bordered table-condensed table-hover" id = "table-attendances">
    <thead>
      <tr>
        <th>日付</th>
        <th>曜日</th>
        <th>出勤時間</th>
        <th>退勤時間</th>
        <th>在社時間</th>
        <th>備考</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <th><%= l(day.worked_on, format: :short) %></th>
          <th><%= $days_of_the_week[day.worked_on.wday] %></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
